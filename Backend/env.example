# AlertMate Environment Configuration

# Gemini LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Database Configuration
DATABASE_URL=sqlite:///Backend/alertmate.db

# Session Configuration
SESSION_SECRET_KEY=your_secure_session_secret_here
SESSION_COOKIE_NAME=alertmate_session
SESSION_MAX_AGE=604800

# Google Cloud Platform API Keys
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Use the SAME API key for all three (one unified Google Maps Platform key)
GOOGLE_PLACES_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_GEOCODING_API_KEY=your_google_maps_api_key_here

# Service Discovery Configuration
SERVICE_DISCOVERY_CACHE_TTL=3600
MAX_SEARCH_RADIUS_KM=50
DEFAULT_SEARCH_RADIUS_KM=25

# Emergency Services Configuration
EMERGENCY_SERVICES_ENABLED=true
FALLBACK_TO_HARDCODED=true
